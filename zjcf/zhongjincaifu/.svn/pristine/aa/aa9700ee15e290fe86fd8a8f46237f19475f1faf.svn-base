{$wrapper_prefix|default}

<script src="{$_STATIC_URL}/promotion/admin/js/index.detail.js"></script>

<section class="hbox stretch">
	<aside class="aside-md bg-white ">
		<section class="vbox">
			<header class="header bg-white b-b clearfix">
				<div class="row m-t-sm">
					<div class="col-sm-8 m-b-xs">
						<a id="button_back" class="btn btn-sm btn-default"
							href="javascript:history.go(-1);"><i class="fa fa-reply"></i> 返回</a> <font
							class="h4 v-middle padder">活动详情</font>
					</div>
					<!--           <div class="col-sm-4 m-b-xs"> -->
					<!--               <button onclick="window.print();" class="btn btn-sm btn-info pull-right" href="#">打印</button> -->
					<!--           </div> -->
				</div>
			</header>
			<section class="edit-map wrapper scrollable w-f">
				<section class="panel panel-default ">
					<header class="panel-heading">活动信息</header>
					<section class="scrollable wrapper panel w-f">
						<form class="form-horizontal">
							<div class="form-group">
								<label class="col-sm-2 control-label">活动类型：</label>
								<div class="col-sm-4">
									<p class="form-control-static">
										{$promotion.category_name}
									</p>
								</div>

								<label class="col-sm-2 control-label">活动名称：</label>
								<div class="col-sm-4">
									<p class="form-control-static">{$promotion.title}</p>
									<input type="hidden" id="promotion_id" value="{$promotion.promotion_id}">
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label">活动时间：</label>
								<div class="col-sm-4">
									<p class="form-control-static">{$promotion.start_time} ~ {$promotion.end_time}</p>
								</div>

								<label class="col-sm-2 control-label">状态：</label>
								<div class="col-sm-4">
									<p class="form-control-static">
									{if $promotion.status eq "1"}
										启用
									{else}
										未启用
									{/if}
									</p>
								</div>
							</div>
						</form>
					</section>
				</section>

				<section class="panel panel-default">
					<div class="table-responsive">
						<table class="table table-striped m-b-none datagrid"
							id="content_listing">
							<thead>
							</thead>
							<tfoot>
								<tr>
									<th class="row">
										<div
											class="datagrid-footer-left col-sm-6 text-center-xs m-l-n"
											style="display: none;">
											<div class="grid-controls m-t-sm">
												<span> <span class="grid-start"></span> - <span
													class="grid-end"></span> （共 <span class="grid-count"></span>）
												</span>

												<div class="select grid-pagesize dropup" data-resize="auto">
													<button data-toggle="dropdown"
														class="btn btn-sm btn-default dropdown-toggle">
														<span class="dropdown-label"></span> <span class="caret"></span>
													</button>
													<ul class="dropdown-menu">
														<li data-value="5"><a href="#">5</a></li>
														<li data-value="15" data-selected="true"><a href="#">15</a></li>
														<li data-value="20"><a href="#">20</a></li>
														<li data-value="50"><a href="#">50</a></li>
														<li data-value="100"><a href="#">100</a></li>
													</ul>
												</div>
												<span>/页</span>
											</div>
										</div>

										<div
											class="datagrid-footer-right col-sm-6 text-right text-center-xs"
											style="display: none;">
											<div class="grid-pager m-r-n">
												<button type="button"
													class="btn btn-sm btn-default grid-prevpage">
													<i class="fa fa-chevron-left"></i>
												</button>
												<!--<span>页</span>-->

												<div class="inline">
													<div class="input-group dropdown combobox">
														<input class="input-sm form-control" type="text">

														<div class="input-group-btn dropup">
															<button class="btn btn-sm btn-default"
																data-toggle="dropdown">
																<i class="caret"></i>
															</button>
															<ul class="dropdown-menu pull-right"></ul>
														</div>
													</div>
												</div>
												<span>/ <span class="grid-pages"></span></span>
												<button type="button"
													class="btn btn-sm btn-default grid-nextpage">
													<i class="fa fa-chevron-right"></i>
												</button>
											</div>
										</div>
									</th>
								</tr>
							</tfoot>
						</table>
					</div>
				</section>
			</section>

			{$wrapper_suffix|default}