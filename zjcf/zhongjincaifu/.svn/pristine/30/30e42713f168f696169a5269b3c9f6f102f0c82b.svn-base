.row {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flex;
  display: flex;
}
.col-1 {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
}
.col-2 {
  -webkit-box-flex: 1.24;
  -webkit-flex: 1.24;
  -ms-flex: 1.24;
  flex: 1.24;
}
.col-3 {
  -webkit-box-flex: 1.05;
  -webkit-flex: 1.05;
  -ms-flex: 1.05;
  flex: 1.05;
}
body,
html {
  width: 100%;
  height: 100%;
  background: #fff;
}
.item {
  height: 100%;
  border-top: 1px solid #e4dddd;
  border-bottom: 1px solid #e4dddd;
  background-color: #ffffff;
  overflow: hidden;
}
.item h1 {
  font-size: 1.625rem;
  color: #333333;
}
.item h2 {
  font-size: 1.375rem;
  color: #acacac;
}
.item h1,
.item h2 {
  position: absolute;
  z-index: 999;
}
.item img {
  width: 99%;
  position: absolute;
  right: 0;
  bottom: 0;
}
.item .left {
  width: 44.84375%;
  position: relative;
}
.item .left h1 {
  font-size: 1.875rem;
  margin-top: 3.125rem;
  margin-left: 1.875rem;
}
.item .left h1 span {
  color: #f66a03;
}
.item .right {
  width: 55.15625%;
  height: 100%;
  border-left: 1px dashed #e4dddd;
}
.item .right .right_top {
  height: 50%;
}
.item .right .right_top h1 {
  top: 1.375rem;
}
.item .right .right_top h2 {
  top: 3.875rem;
}
.item .right .right_top h1,
.item .right .right_top h2 {
  left: 0.875rem;
}
.item .right .right_top .right_top_left {
  width: 51.41242938%;
  height: 100%;
  position: relative;
}
.item .right .right_top .right_top_right {
  width: 48.58757062%;
  height: 100%;
  position: relative;
}
.item .right .right_bottom {
  width: 100%;
  height: 50%;
  position: relative;
  box-sizing: border-box;
  /*border-top: 1px dashed #e4dddd;*/
}
.item .right .right_bottom h1 {
  top: 1.375rem;
}
.item .right .right_bottom h2 {
  top: 3.875rem;
}
.item .right .right_bottom h1,
.item .right .right_bottom h2 {
  left: 2.25rem;
}
