{$wrapper_prefix|default}

<script src="{$_STATIC_URL}/admin/js/personal.resetpassword.js" type="text/javascript"></script>

<section class="hbox stretch">
    <aside class="aside-md bg-white b-r">
        <section class="vbox">
            <header class="b-b header">
                <p class="h4">密码管理</p>
            </header>
            
            <section class="scrollable wrapper w-f">
                <form class="form-horizontal" id="edit_form" action="/admin/personal/resetpassword" method="post">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">用户名</label>
                        <div class="col-sm-4">
                            <p class="form-control-static">{$user.username}</p>
                        </div>
                    </div>
                    <div class="line line-dashed line-lg pull-in"></div>
                        
                    <div class="form-group">
                        <label for="password_old" class="col-sm-2 control-label">原密码</label>
                        <div class="col-sm-4">
                            <input type="password" class="form-control" id="password_old" name="password_old" value="" />
                        </div>
                    </div>
                    <div class="line line-dashed line-lg pull-in"></div>
                    
                    <div class="form-group">
                        <label for="password" class="col-sm-2 control-label">新密码</label>
                        <div class="col-sm-4">
                            <input type="password" class="form-control" id="password" name="password" value="" />
                        </div>
                    </div>
                    <div class="line line-dashed line-lg pull-in"></div>
                    
                    <div class="form-group">
                        <label for="password_verify" class="col-sm-2 control-label">确认新密码</label>
                        <div class="col-sm-4">
                            <input type="password" class="form-control" id="password_verify" name="password_verify" value="" />
                        </div>
                    </div>
                    <div class="line line-dashed line-lg pull-in"></div>
                    
                    <input type="hidden" name="userid" value="{$user.userid}" />
                </form>
            </section>
            
            <footer class="footer b-t bg-white-only">
                <div class="m-t-sm">
                    <button type="button" id="submit_save_continue" class="btn btn-s-md btn-primary btn-sm input-submit">保存</button>
                    <span id="edit_notice"></span>
                </div>
            </footer>
        </section>
    </aside>
</section>

{$wrapper_suffix|default}