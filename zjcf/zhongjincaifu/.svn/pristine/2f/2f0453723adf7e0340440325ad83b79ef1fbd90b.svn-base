{$wrapper_prefix|default}

<script src="{$_STATIC_URL}/admin/setting/js/menu.index.js"></script>

<section class="hbox stretch">
    <aside class="aside-md bg-white b-r" id="subNav">
        <section class="vbox">
            <header class="b-b header"><p class="h4">前台导航管理</p></header>
            <section class="scrollable w-f">
                <ul class="nav nav-pills nav-stacked no-radius">
                    {foreach from=$groups item=v}
                    <li class="b-b m-t-none-reset {if $group_id == $v.group_id}active{/if}">
                        <a href="/setting/menu?group_id={$v.group_id}" class="load-content">
                            <i class="fa fa-chevron-right pull-right m-t-xs text-xs icon-muted"></i>
                            <i class="fa fa-fw fa-ellipsis-v"></i>
                            {$v.group_name}
                        </a>
                    </li>
                    {/foreach}
                    <input type="hidden" name="group_id" value="{$group_id}" />
                </ul>
            </section>
        </section>
    </aside>
    
    <aside>
        <section class="vbox">
		    <header class="header bg-white b-b clearfix">
		        <div class="row m-t-sm">
		            <div class="col-sm-8 m-b-xs">
		                <div class="btn-group">
		                    <button type="button" class="btn btn-sm btn-default action-refresh" title="Refresh"><i class="fa fa-refresh"></i></button>
		                </div>
		                <a href="/setting/menu/add" data-toggle="ajaxModal" class="btn btn-sm btn-default" id="modal_edit"><i class="fa fa-plus"></i> 添加</a>
		            </div>
		        </div>
		    </header>
		        
		    <section class="scrollable wrapper">
		        <section class="panel panel-default">
		            <div class="table-responsive">
		                <table class="table table-striped m-b-none datagrid" id="menu_listing">
		                    <thead>
		                    </thead>
		                </table>
		            </div>
		        </section>
		    </section>
	    </section>
    </aside>
</section>

{$wrapper_suffix|default}